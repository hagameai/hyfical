{
  "version": "1.0",
  "project_type": "python_application",
  "recommended_structure": {
    "src/": {
      "description": "Main source code directory",
      "file_types": ["*.py"],
      "subdirectories": {
        "operations/": "Git operations management classes",
        "branches/": "Branch management classes",
        "utils/": "Utility functions and helpers"
      }
    },
    "docs/": {
      "description": "Documentation files",
      "file_types": ["*.md"],
      "subdirectories": {}
    },
    "tests/": {
      "description": "Test files",
      "file_types": ["test_*.py"],
      "subdirectories": {
        "unit/": "Unit tests for individual modules",
        "integration/": "Integration tests for system functionality"
      }
    }
  },
  "guidelines": [
    "Place main application code in src/",
    "Keep tests separate in tests/ directory",
    "Document everything in docs/",
    "Use clear, descriptive directory names"
  ]
}